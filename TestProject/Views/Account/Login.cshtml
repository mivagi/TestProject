@model TestProject.Data.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <form method="post" asp-action="Login">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <label asp-for="Name">Введите логин</label>
            <input asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input asp-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Вход" class="btn btn-dark"/>
        </div>
    </form>
</div>

