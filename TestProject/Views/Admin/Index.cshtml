@model IEnumerable<Car>
@{
    ViewData["Title"] = "Index";
}


    <div class="container">
        <table class="table">
            <tr><th>Модель</th><th>Цена</th><th>Категория</th><th></th></tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <form method="post" asp-action="DeleteCar">
                            <a asp-action="EditCar" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактировать</a>
                            <input type="hidden" name="Id" value="@item.Id" />
                            <input type="submit" value="Удалить" class="btn btn-danger btn-sm" />
                        </form>
                    </td>
                </tr>
            }
        </table>
        <div>
            <form method="post" asp-action="Logout" asp-controller="Account">
                <a asp-action="CreateCar" class="btn btn-warning btn-sm">Добавить автомобиль</a>
                <input type="submit" value="Выход" class="btn btn-danger btn-sm" />
            </form>
        </div>
    </div>

